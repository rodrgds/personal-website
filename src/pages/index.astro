      <h3>Writings</h3>
      <ul class="writings">
        {
          posts.map((post) => (
            <li>
              <time datetime={post.data.pubDate} transition:name={`blogpost-pubdate-${post.slug}`}>
                {new Date(post.data.pubDate).toLocaleDateString("en-us", {
                  year: "numeric",
                  month: "short",
                  day: "numeric",
                })}
              </time>
              <a href={"/posts/" + post.slug} transition:name={`blogpost-name-${post.slug}`}>{post.data.title}</a>
            </li>
          ))
        }
      </ul>
    </main>
    <Footer />

    <script>
      document.addEventListener('DOMContentLoaded', function() {
        const expandButton = document.getElementById('expand-socials');
        const extraSocials = document.getElementById('extra-socials');
        
        if (expandButton && extraSocials) {
          expandButton.addEventListener('click', function() {
            const isHidden = extraSocials.classList.contains('hidden');
            const buttonSpan = expandButton.querySelector('span');
            
            if (isHidden) {
              extraSocials.classList.remove('hidden');
              if (buttonSpan) buttonSpan.textContent = '√ó';
              expandButton.setAttribute('aria-label', 'Hide additional social links');
            } else {
              extraSocials.classList.add('hidden');
              if (buttonSpan) buttonSpan.textContent = '‚Ä¢‚Ä¢‚Ä¢';
              expandButton.setAttribute('aria-label', 'Show more social links');
            }
          });
        }
      });
