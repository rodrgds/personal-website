<style>
  .socials {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
    padding: 0;
    list-style-type: none;
    padding: unset;
    margin: 1rem 0 0 0;
  }

  .socials li {
    list-style-type: none;
  }

  .socials li a {
    display: inline-block;
  }

  .socials li > a:hover::before {
    width: 0;
  }
  
  .socials li > a:hover {
    transform: scale(1.15);
    transition: transform 0.1s;
  }

  .expand-button {
    background: none;
    border: none;
    cursor: pointer;
    font-size: 1.2rem;
    color: var(--text-color);
    padding: 0.5rem;
    border-radius: 50%;
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.1s, background-color 0.2s;
  }

  .expand-button:hover {
    transform: scale(1.15);
    background-color: rgba(0, 0, 0, 0.1);
  }

  .expand-button:focus {
    outline: 2px solid var(--text-color);
    outline-offset: 2px;
  }

  .extra-socials {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
    transition: opacity 0.3s ease, transform 0.3s ease;
  }

  .extra-socials.hidden {
    display: none;
  }

  .extra-socials li {
    list-style-type: none;
  }

  .extra-socials li a {
    display: inline-block;
  }

  .extra-socials li > a:hover::before {
    width: 0;
  }
  
  .extra-socials li > a:hover {
    transform: scale(1.15);
    transition: transform 0.1s;
  }

  .writings {
    list-style-type: none;
    padding: unset;
    margin: 0;
  }
  .writings li {
    display: flex;
  }
  .writings li time {
    flex: 0 0 9.3rem;
    font-family: var(--font-family-mono);
    color: #656565;
  }

  .writings li a:visited {
    color: var(--visited-color);
  }

  .writings li > a:hover::before {
    content: "‚Üí";
    width: 0;
    bottom: 1.8rem;
    left: -1.5rem;
  }
  .writings li > a:hover::after {
    content: "‚Üê";
    margin-left: 0.5rem;
  }

  .popover__wrapper {
    position: relative;
    margin-top: 0;
    display: inline-block;
  }
  .popover__content {
    opacity: 0;
    visibility: hidden;
    position: absolute;
    top: 4.2rem;
    left: -7rem;
    right: -7rem;
    background-color: var(--background-color);
    border-radius: 0.5rem;
    padding: 1.2rem;
    border: 1px solid #bfbfbf;
    box-shadow: 0 1px 4px 0 var(--text-color);
    width: auto;
  }
  .popover__content:before {
    position: absolute;
    z-index: -1;
    content: "";
    right: calc(50% - 10px);
    top: -1rem;
    border-style: solid;
    border-width: 0 10px 10px 10px;
    border-color: transparent transparent #bfbfbf transparent;
    box-shadow: var(--background-color) 1px 1px 1px;
    transition-duration: 0.3s;
    transition-property: transform;
  }
  .popover__wrapper:hover .popover__content {
    z-index: 10;
    opacity: 1;
    visibility: visible;
    transform: translate(0, -20px);
    transition: all 0.5s cubic-bezier(0.75, -0.02, 0.2, 0.97);
  }
  .stack {
    margin: 0;
    font-family: var(--font-family-mono);
    display: flex;
    flex-wrap: wrap;
    padding: 0;
    margin: 0;
    list-style: none;
    gap: 0.5rem;
  }
  .stack li {
    padding: 0.3rem 0.5rem;
    border-radius: 0.5rem;
    border: 2px solid var(--text-color);
    color: var(--text-color);
    opacity: 0.8;
  }
  .popover__content h2 {
    margin: 0;
  }
  .popover__content img {
    margin-top: 1.2rem;
    width: 100%;
    border-radius: 0.5rem;
  }
</style>