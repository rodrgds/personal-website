---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";
import Logo from "../components/Logo.astro";
import CryptoWallet from "../components/CryptoWallet.astro";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={"Donate"} description={SITE_DESCRIPTION} />
    <style>
      .wallet-address {
        font-size: 1rem;
        font-weight: 400;
        color: #666;
      }
    </style>
  </head>

  <body>
    <Header title={SITE_TITLE} />
    <main style="width: 100%">
      <h1>Donate</h1>
      <p>
        Thank you for your interest in supporting my work. I'm currently
        accepting donations in the following payment methods:
      </p>
      <h3>
        <Logo src="paypal" alt="PayPal logo" size={30} />
        {" "} PayPal
      </h3>
      <div style="width: 100%; margin-bottom: 0.75rem"></div>
      <a class="button" href="https://url.rgo.pt/paypal" target="_blank"
        >Donate with PayPal</a
      >
      <hr />
      <CryptoWallet
        crypto="Bitcoin"
        symbol="BTC"
        address="bc1qq585dkq4r5cr4jyycgpcslzy6wyntgdm6a9yz9"
      />
      <CryptoWallet
        crypto="Monero"
        symbol="XMR"
        address="44gcujcMnYvfE71di2g4cR2GX2LcgQAXeNiUgKvHitKw73k8pR5LnAqPTFNShoXe3UPZNLPsd53DXFtXxrGkJ36pACyHLzn"
      />
      <CryptoWallet
        crypto="Ethereum"
        symbol="ETH"
        address="0x4949615412943a53d13e2fED01f01e8D8b357764"
      />
      <CryptoWallet
        crypto="Litecoin"
        symbol="LTC"
        address="ltc1q5llkfe564wtkz9a0hahdkzdj66fjyl38czd745"
      />
      <p>
        Want me to support another payment method or crypto coin? Email me at <a
          href="mailto:hey@rgo.pt">hey@rgo.pt</a
        >.
      </p>
    </main>
    <Footer />
    <style>
      .button {
        background-color: var(--link-color);
        border: none;
        color: white;
        padding: 0.4rem 1rem;
        text-align: center;
        text-decoration: none !important;
        font-size: 1rem;
        cursor: pointer;
        border-radius: 0.25rem;
        display: inline-block;
        margin-top: 0.2rem;
        transition: background-color 0.1s ease-out;
      }
      .button:hover {
        background-color: var(--visited-color);
      }
      .button::before {
        width: 0;
      }
    </style>
  </body>
</html>
